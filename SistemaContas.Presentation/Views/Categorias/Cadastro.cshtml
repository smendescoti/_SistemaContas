@model SistemaContas.Presentation.Models.CategoriasCadastroModel

@{
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h4>Cadastro de Categorias</h4>
<p>Inclua uma categoria para organizar suas contas.</p>

@using(Html.BeginForm())
{
    <div class="mb-2">
        <label>Nome da categoria:</label>
        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
    </div>

    <div class="mb-2">
        <input type="submit" class="btn btn-success" value="Realizar Cadastro"/>
    </div>
}
